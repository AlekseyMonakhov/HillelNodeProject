<form
    action="/comments/create/<%= postId %>"
    method="post"
    class="comment_form"
>
    <h2>Add comment</h2>

    <label for="comment_content">Content:</label>
    <textarea
        class="comment_content"
        id="comment_content"
        name="content"
        rows="4"
        cols="40"
        required
    ></textarea>

    <input
        type="hidden"
        name="post_id"
        value="<%= postId %>"
    />

    <button type="submit" class="add_comment">Add comment</button>
</form>
