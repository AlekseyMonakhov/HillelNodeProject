<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head') %>
        <link
            rel="stylesheet"
            href="/css/posts.css"
        />
        <link
            rel="stylesheet"
            href="/css/create_post_modal.css"
        />
        <link
            rel="stylesheet"
            href="/css/comments.css"
        />

        <script
            src="/js/post.js"
            defer
        ></script>
        <script
            src="/js/formsHandler.js"
            defer
        ></script>
    </head>
    <body>
        <%- include('partials/header') %>

        <main class="my_posts">
            <h1>My Posts</h1>
            <section class="posts_container">
                <% if (posts.length) { %> <% posts.forEach(post => { %> <%-
                    include('components/post', { post, isEditable }) %> <% }) %> <%
                } else { %>
                        <p>No posts yet</p>
                    <% } 
                %>
            </section>
            <div class="modal_container">
                <button class="create_post_button">Create Post</button>

                <dialog id="PostDialog">
                    <%- include('components/create_post') %>
                </dialog>
            </div>
        </main>
    </body>
</html>
